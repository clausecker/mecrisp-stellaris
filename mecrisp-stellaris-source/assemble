#!/bin/sh
set -eu

build() {
	(
		port="${1:?}"
		cd "${port:?}"

		mkdir -p "../../${port:?}"
		make clean all

		set -- *.bin
		if [ -f "$1" ]; then
			ls -l -- "$@"
			md5sum -- "$@"
			cp -- "$@" "../../${port:?}/"
		fi

		set -- *.hex
		if [ -f "$1" ]; then
			cp -- "$@" "../../${port:?}/"
		fi

		set -- *.srec
		if [ -f "$1" ]; then
			cp -- "$@" "../../${port:?}/"
		fi

	)
}

build aducm4050-ra
build atsame70-ra
build lpc1114fn28
build lpc1114fn28-ra
build lpc1114fbd48
build lpc1114fbd48-ra
build lpc1115fbd48
build lpc1115fbd48-ra
build lpc845m301
build kl25z128
build kl25z128-ra
build kl46z256
build kl46z256-ra
build mk20dx256
build mk64fn1m0
build mk64fn1m0-ra
build nrf51822
